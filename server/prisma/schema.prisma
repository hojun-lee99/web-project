generator client {
  provider = "prisma-client-js"
}

generator markdown {
  provider = "prisma-markdown"
  output   = "./ERD.md"
  title    = "moviepedia"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Provider {
  LOCAL
  KAKAO
}

model User {
  id       String   @id @db.Uuid
  email    String   @unique
  password String
  name     String
  provider Provider
  reviews  Review[]

  createdAt DateTime @map("created_at")
  updatedAt DateTime @map("updated_at")
}

model Movie {
  id            Int      @id
  averageRating Float    @default(0)
  reviews       Review[]

  createdAt DateTime @map("created_at")
  updatedAt DateTime @map("updated_at")

  @@index([averageRating])
}

model Review {
  id      String @id @db.Uuid
  title   String
  comment String
  rating  Float  @default(0)
  user    User   @relation(fields: [userId], references: [id])
  userId  String @db.Uuid
  Movie   Movie  @relation(fields: [movieId], references: [id])
  movieId Int

  createdAt DateTime @map("created_at")
  updatedAt DateTime @map("updated_at")

  @@index([userId])
  @@index([movieId])
}
